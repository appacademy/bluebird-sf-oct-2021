<h2><%= user.username %>'s details</h2>
<ul>
    <li>Username: <%= user.username %></li>
    <li>Age: <%= user.age %></li>
    <li>Email: <%= user.email %></li>
    <% if action == :from_show_page %>
        <li><a href="<%= users_url %>">User Index</a></li>
    <% elsif action == :from_index_page %>
        <li><a href="<%= user_url(user.id) %>">User's Show Page</a></li>
    <% end %>
</ul>